									label.single-product-rating-widget__star(for="rating4")
									input.single-product-rating-widget__input#rating5(type="radio" name="rating" value="5")
									label.single-product-rating-widget__star(for="rating5")
						.single-product-review-form-section
							p.single-product-review-form-section__title Общая оценка
							.single-product-review-form-section__input
								.new-catalog-filters-radio
									input#exp1(type="radio" name="review-experience" value="1" required)
									label(for="exp1") Менее месяца
							.single-product-review-form-section__input
