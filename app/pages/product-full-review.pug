							.single-product-review-form-section__input
								.new-catalog-filters-radio
									input#exp3(type="radio" name="review-experience" value="3" required)
									label(for="exp3") Более года
						.single-product-review-form-section
							p.single-product-review-form-section__title Ваша рекомендация
							.single-product-review-form-section__input
								.new-catalog-filters-radio
									input#rec1(type="radio" name="review-rec" value="1" required)
									label(for="rec1") Рекомендую к покупке
							.single-product-review-form-section__input
								.new-catalog-filters-radio
									input#rec2(type="radio" name="review-rec" value="2" required)
									label(for="rec2") Не рекомендую
						.single-product-review-form-section
							p.single-product-review-form-section__title Ваш комментарий
							.single-product-review-form-section__input
								textarea.single-product-review-form__text(name="review-pros" placeholder="Достоинства" required)
							.single-product-review-form-section__input
								textarea.single-product-review-form__text(name="review-cons" placeholder="Недостатки" required)
							.single-product-review-form-section__input
								textarea.single-product-review-form__text(name="review-opinion" placeholder="Общее впечатление о товаре" required)
							.single-product-review-form-section__input
								button.msg-button(type="submit") #[span Оставить отзыв]
